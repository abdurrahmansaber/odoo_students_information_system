                <menuitem id="menu_academic_programs"
                          name="Academic Programs"
                          action="uis_core.action_academic_programs"
                          sequence="20"/>

                <menuitem id="menu_sections"
                          name="Sections"
                          action="action_sections"
                          sequence="30"/>

            </menuitem>

            <menuitem id="building_menu"
                      name="Buildings"
                      sequence="30">

                <menuitem id="menu_buildings"
                          name="Buildings"
                          action="uis_core.action_buildings"
                          sequence="10"/>

                <menuitem id="menu_classrooms"
                          name="Classrooms"
                          action="uis_core.action_classrooms"
                          sequence="20"/>

            </menuitem>

            <menuitem id="menu_teachers"
                      name="Teachers"
                      action="uis_core.action_uis_employee_views"
                      sequence="50"/>

        </menuitem>

    </menuitem>

    <record id="utm.menu_link_tracker_root" model="ir.ui.menu">
        <field name="active">False</field>
    </record>

    <record id="hr.menu_hr_root" model="ir.ui.menu">
        <field name="active">False</field>
    </record>

    <record id="website_slides.website_slides_menu_root" model="ir.ui.menu">
