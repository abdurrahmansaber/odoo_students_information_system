              sequence="10">

        <menuitem id="student_menu"
                  name="Students"
                  sequence="10">

            <menuitem id="menu_students"
                      name="Students"
                      action="action_sis_student_views"
                      sequence="10"/>

            <menuitem id="menu_archive"
                      name="Archive"
                      action="action_sis_student_archive_views"
                      sequence="20"/>

            <menuitem id="menu_attendance"
                      name="Attendance"
                      action="website_slides.slide_channel_partner_action"
                      sequence="30"/>

        </menuitem>

        <menuitem id="course_menu"
                  name="Courses"
                  sequence="40">

            <menuitem id="menu_courses"
                      name="Courses"
                      action="website_slides.slide_channel_action_overview"
                      sequence="10"/>

        </menuitem>

        <menuitem id="menu_uis_config"
                  name="Configuration"
                  sequence="50">

            <menuitem id="menu_settings"
                      name="Settings"
                      action="uis_core.action_uis_config_settings"
                      sequence="10"/>

            <menuitem id="college_menu"
                      name="Colleges"
                      sequence="20">

                <menuitem id="menu_departments"
                          name="Departments"
