<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sis_student_archive_tree" model="ir.ui.view">
            <field name="name">view_sis_student_archive_tree</field>
            <field name="model">student.archive</field>
            <field name="arch" type="xml">
                <tree string="Archive" create="false" edit="false" delete="false" sample="true">
                    <field name="student_code"/>
                    <field name="student_name"/>
                    <field name="national_id" optional="show"/>
                    <field name="phone" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="lang" optional="show"/>
                    <field name="country" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="view_sis_student_archive_form" model="ir.ui.view">
            <field name="name">view_sis_student_archive_form</field>
            <field name="model">student.archive</field>
            <field name="arch" type="xml">
                <form string="Archive" create="false" write="false" delete="false">
                    <sheet>
                        <h3>
                            <field name="student_name"/>
                        </h3>
                        <group>
                            <group>
                                <field name="student_code"/>
                                <field name="national_id"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="lang"/>
                                <field name="country"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Archive Lines">
                                <field name="line_ids">
                                    <tree create="false" edit="false">
                                        <field name="academic_year"/>
                                        <field name="company_id"/>
                                        <field name="academic_program_id"/>
                                        <field name="level"/>
                                        <field name="state"/>
                                        <field name="academic_advisor_id" optional="hide"/>
                                        <field name="section_id" optional="hide"/>
                                        <field name="total_grade" optional="hide"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                <field name="academic_year" readonly="1"/>
                                                <field name="company_id" readonly="1"/>
                                                <field name="academic_program_id" readonly="1"/>
                                                <field name="level" readonly="1"/>
                                                <field name="state" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="academic_advisor_id" readonly="1"/>
                                                <field name="section_id" readonly="1"/>
                                                <field name="total_grade" readonly="1"/>
                                            </group>
                                            </group>
                                            <notebook>
                                                <page string="Grades">
                                                    <field name="course_grade_archive_ids">
                                                        <tree create="false" edit="false">
                                                            <field name="course_id"/>
                                                            <field name="level"/>
                                                            <field name="student_grade"/>
                                                            <field name="total_course_grade"/>
                                                            <field name="state"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sis_student_archive_views" model="ir.actions.act_window">
            <field name="name">Archive</field>
            <field name="res_model">student.archive</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No archives exists!
                </p>
            </field>
        </record>

    </data>
</odoo>