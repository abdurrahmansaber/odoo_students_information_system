<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="website_slides.slide_channel_partner_action" model="ir.actions.act_window">
        <field name="domain">[('channel_user_id', '=', uid),('partner_id.is_student', "=", True)]</field>
        <field name="context">{'search_default_groupby_course_level': 1, 'search_default_groupby_student_level': 1, 'search_default_groupby_student' : 1}</field>
    </record>

    <record id="slide_channel_partner_view_search_add_groupby_levels" model="ir.ui.view">
        <field name="name">slide_channel_partner_view_search_add_groupby_levels</field>
        <field name="model">slide.channel.partner</field>
        <field name="inherit_id" ref="website_slides.slide_channel_partner_view_search"/>
        <field name="arch" type="xml">

            <xpath expr="//search" position="inside">
                <filter name="groupby_student_level" string="Student Level" context="{'group_by': 'partner_level'}"/>
                <filter name="groupby_course_level" string="Course Level" context="{'group_by': 'course_level'}"/>
                <filter name="groupby_student" string="Student" context="{'group_by': 'partner_id'}"/>
            </xpath>

        </field>
    </record>

    <record id="slide_channel_partner_view_tree_add_partner_name_and_code" model="ir.ui.view">
        <field name="name">slide.channel.partner.view.tree.add.partner.name.and.code</field>
        <field name="model">slide.channel.partner</field>
        <field name="inherit_id" ref="website_slides.slide_channel_partner_view_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='channel_id']" position="before">
                <field name="partner_code"/>
                <field name="partner_name"/>
            </xpath>

        </field>
    </record>

</odoo>